<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SalaryController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="QUẢN LÝ BẢNG LƯƠNG NHÂN VIÊN" />
            <!-- Filter Row -->
            <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="914.0" spacing="10">
                <children>
                    <Label prefHeight="38.0" prefWidth="36.0" text="Tháng:" />
                    <ComboBox fx:id="cbMonth" prefHeight="46.0" prefWidth="100" />
                    <Label prefHeight="42.0" prefWidth="29.0" text="Năm:" />
                    <ComboBox fx:id="cbYear" prefHeight="46.0" prefWidth="100" />
                    <Button fx:id="btnFilter" onAction="#handleFilter" prefHeight="31.0" prefWidth="102.0" styleClass="save-btn" stylesheets="@style.css" text="Lọc" />
                    <Region HBox.hgrow="ALWAYS" />
                </children>
            </HBox>
            
            <!-- Add Salary Row -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #f9f9f9; -fx-padding: 15px; -fx-border-radius: 5px;">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Thêm bảng lương cho:" />
                    <VBox spacing="5">
                        <Label text="Mã nhân viên:" />
                        <TextField fx:id="tfEmployeeId" prefWidth="120" promptText="Nhập mã NV" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Tháng được chọn:" />
                        <Label fx:id="lblSelectedMonth" style="-fx-font-weight: bold; -fx-text-fill: #007acc;" text="6/2025" />
                    </VBox>
                    <Button fx:id="btnAddNew" onAction="#handleAddNew" prefHeight="46.0" prefWidth="238.0" styleClass="save-btn" stylesheets="@style.css" text="➕ Thêm bảng lương" />
                    <Button fx:id="btnDeleteSalary" onAction="#handleDeleteSalary" prefHeight="46.0" prefWidth="215.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" styleClass="save-btn" stylesheets="@style.css" text="🗑 Xóa bảng lương" />
                </children>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <TableView fx:id="salaryTable" prefHeight="400" stylesheets="@style.css">
                    <columns>
                        <TableColumn fx:id="colEmployeeId" prefWidth="80" text="Mã NV" />
                        <TableColumn fx:id="colSalaryCode" prefWidth="80" text="Mã lương" />
                        <TableColumn fx:id="colBasicSalary" prefWidth="100" text="Lương cơ bản" />
                        <TableColumn fx:id="colPresent" prefWidth="80" text="Ngày có mặt" />
                        <TableColumn fx:id="colLate" prefWidth="90.4000244140625" text="Ngày đi muộn" />
                        <TableColumn fx:id="colAbsent" prefWidth="69.5999755859375" text="Ngày vắng" />
                        <TableColumn fx:id="colBonusPenalty" prefWidth="100" text="Thưởng/Phạt" />
                        <TableColumn fx:id="colTotalSalary" prefWidth="142.4000244140625" text="Lương thực tế" />
                        <TableColumn fx:id="colNote" prefWidth="149.60003662109375" text="Ghi chú" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
