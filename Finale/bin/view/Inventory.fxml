<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="main_form" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="636.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.InventoryController">
   <children>
      <AnchorPane prefHeight="636.0" prefWidth="409.0" style="-fx-background-color: white;">
         <children>
            <Label layoutX="81.0" layoutY="221.0" prefHeight="50.0" prefWidth="282.0" styleClass="labelHeader" stylesheets="@style.css" text="Product Detail Information">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label layoutX="39.0" layoutY="278.0" prefHeight="28.0" prefWidth="90.0" styleClass="label1" stylesheets="@style.css" text="Product ID" />
            <Label layoutX="39.0" layoutY="321.0" prefHeight="28.0" prefWidth="114.0" styleClass="label1" stylesheets="@style.css" text="Product Name" />
            <Label layoutX="39.0" layoutY="367.0" prefHeight="28.0" prefWidth="89.0" styleClass="label1" stylesheets="@style.css" text="Type" />
            <Label layoutX="39.0" layoutY="413.0" prefHeight="28.0" prefWidth="92.0" styleClass="label1" stylesheets="@style.css" text="Stock" />
            <Label layoutX="39.0" layoutY="454.0" prefHeight="28.0" prefWidth="100.0" styleClass="label1" stylesheets="@style.css" text="Price (VNĐ)" />
            <Label layoutX="40.0" layoutY="498.0" prefHeight="28.0" prefWidth="121.0" styleClass="label1" stylesheets="@style.css" text="Note:" />
            
            <TextField fx:id="inventory_productID" layoutX="197.0" layoutY="279.0" prefHeight="25.0" prefWidth="194.0" styleClass="text-field" stylesheets="@style.css" />
            <TextField fx:id="inventory_productName" layoutX="197.0" layoutY="322.0" prefHeight="25.0" prefWidth="194.0" />
            
            <!-- ✅ SỬA - Đổi từ TextField thành ComboBox -->
            <ComboBox fx:id="inventory_type" layoutX="195.0" layoutY="368.0" prefHeight="25.0" prefWidth="194.0" />
            
            <TextField fx:id="inventory_stock" layoutX="195.0" layoutY="412.0" prefHeight="25.0" prefWidth="194.0" />
            <TextField fx:id="inventory_price" layoutX="195.0" layoutY="455.0" prefHeight="25.0" prefWidth="194.0" />
            <TextArea fx:id="inventory_note" layoutX="194.0" layoutY="505.0" prefHeight="67.0" prefWidth="194.0" />
            
            <Button fx:id="inventory_addBtn" layoutX="55.0" layoutY="582.0" mnemonicParsing="false" onAction="#inventoryAddBtn" prefHeight="45.0" prefWidth="100.0" styleClass="save-btn" stylesheets="@style.css" text="Add" />
            <Button fx:id="inventory_updateBtn" layoutX="240.0" layoutY="581.0" mnemonicParsing="false" onAction="#inventoryUpdateBtn" prefHeight="46.0" prefWidth="122.0" styleClass="save-btn" stylesheets="@style.css" text="Update" />
            <Button fx:id="inventory_importBtn" layoutX="134.0" layoutY="178.0" mnemonicParsing="false" onAction="#inventoryImportBtn" styleClass="save-btn" stylesheets="@style.css" text="Import" />
            
            <AnchorPane layoutX="94.0" layoutY="14.0" prefHeight="150.0" prefWidth="194.0" stylesheets="@style.css">
               <styleClass>
                  <String fx:value="white-bg" />
                  <String fx:value="shadow" />
               </styleClass>
               <children>
                  <!-- ✅ SỬA - Tên ImageView để khớp Controller -->
                  <ImageView fx:id="inventory_imageView" fitHeight="150.0" fitWidth="200.0" layoutX="-3.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
      
      <SplitPane orientation="VERTICAL" prefHeight="636.0" prefWidth="792.0" style="-fx-background-color: white;">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="314.0" prefWidth="810.0">
               <children>
                  <ScrollPane layoutX="14.0" layoutY="35.0" prefHeight="530.0" prefWidth="774.0">
                     <content>
                        <!-- ✅ SỬA - Tên TableView và Columns để khớp Controller -->
                        <TableView fx:id="inventory_tableView" onMouseClicked="#inventorySelectData" prefHeight="520.0" prefWidth="822.0" stylesheets="@style.css">
                          <columns>
                            <!-- ✅ SỬA - Tên columns để khớp Controller -->
                            <TableColumn fx:id="inventory_col_productID" prefWidth="100.0" text="Product ID" />
                            <TableColumn fx:id="inventory_col_productName" prefWidth="130.0" text="Product Name" />
                            <TableColumn fx:id="inventory_col_type" prefWidth="100.0" text="Type" />
                            <TableColumn fx:id="inventory_col_stock" prefWidth="80.0" text="Stock" />
                            <TableColumn fx:id="inventory_col_price" prefWidth="100.0" text="Price" />
                            <TableColumn fx:id="inventory_col_note" prefWidth="150.0" text="Note" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </ScrollPane>
                  <Label layoutX="337.0" layoutY="2.0" prefHeight="34.0" prefWidth="168.0" styleClass="button1" stylesheets="@style.css" text="INVENTORY TABLE" />
                  <Button fx:id="inventory_clearBtn" layoutX="175.0" layoutY="583.0" mnemonicParsing="false" onAction="#inventoryClearBtn" prefHeight="46.0" prefWidth="122.0" styleClass="save-btn" stylesheets="@style.css" text="Clear" />
                  <Button fx:id="inventory_deleteBtn" layoutX="512.0" layoutY="582.0" mnemonicParsing="false" onAction="#inventoryDeleteBtn" prefHeight="46.0" prefWidth="122.0" styleClass="save-btn" stylesheets="@style.css" text="Delete" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</HBox>
